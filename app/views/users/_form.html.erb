<%= render 'shared/errors', object: @user %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |u| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= u.label :username %>
        </div>
        <div class="col-sm-8">
          <%= u.text_field :username, placeholder: "Choose a username", autofocus: true, class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= u.label :email %>
        </div>
        <div class="col-sm-8">
          <%= u.email_field :email, placeholder: "Enter your email address", class: "form-control" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= u.label :password %>
        </div>
        <div class="col-sm-8">
          <%= u.password_field :password, placeholder: "Choose a password", autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <% if admin? %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= u.label :rank %>
        </div>
        <div class="col-sm-8">
          <%= u.text_field :rank, placeholder: "Change user rank", autocomplete: "off", class: "form-control" %>
        </div>
      </div>
      <% end %>
      <div class="form-group">
        <div class="col-sm-10 col-sm-offset-2">
          <% if admin? %>
          <%= u.submit "Update this profile", class: 'btn btn-primary btn-lg' %>
          <% else %>
          <%= u.submit(@user.new_record? ? "Sign up" : "Update your profile", class: 'btn btn-primary btn-lg') %>
          <% end %>
          <%= link_to "Cancel", articles_path, class: 'btn btn-default btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
