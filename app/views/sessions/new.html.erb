<div class="panel panel-primary">
  <div class="panel-heading">Log in</div>
  <div class="panel-body">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |u| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= u.label :email %>
      </div>
      <div class="col-sm-8">
        <%= u.email_field :email, placeholder: "Your email", autofocus: true, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= u.label :password %>
      </div>
      <div class="col-sm-8">
        <%= u.password_field :password, placeholder: "Your password", autocomplete: "off", class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= u.submit "Log in", class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <% end %>
  </div>
</div>
