<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Ticker</th>
      <th>Current Value</th>
      <% if @user.id == current_user.id %>
      <th>Actions</th>
      <% end %>
    </tr>
  </thead>
  <tb>
    <% @user_stocks.each do |s| %>
    <tr>
      <td><%= s.name %></td>
      <td><%= s.ticker %></td>
      <td><%= s.last_value %></td>
      <% if @user.id == current_user.id %>
      <td>
        <%= link_to 'Delete this stock', user_stock_path(s), :method => :delete,
                              :data => { :confirm => "Are you sure to remove this stock from your portfolio?" },
                              :class => "btn btn-xs btn-danger" %>
      </td>
      <% end %>
    </tr>
    <% end %>
  </tb>
</table>
